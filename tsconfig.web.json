{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/*_src/env.d.ts",
    "src/renderer/*_src/**/*",
    "src/renderer/*_src/**/*.ts",
    "src/renderer/*_src/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "composite": true,
    "jsxImportSource": "solid-js",
    "baseUrl": ".",
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@renderer/*": [
        "src/renderer/main_src/*"
      ],
      "@shared/*": [
        "src/shared/src/*"
      ]
    }
  }
}